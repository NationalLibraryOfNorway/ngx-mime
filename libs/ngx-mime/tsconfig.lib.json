{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "target": "ES2022",
    "declaration": true,
    "declarationMap": true,
    "inlineSources": true,
    "types": [],
    "lib": ["dom", "es2018"],
    "useDefineForClassFields": false
  },
  "exclude": [
    "src/test.ts",
    "**/*.spec.ts",
    "**/*-test.module.ts",
    "**/test-*.ts"
  ],
  "include": ["**/*.ts"]
}
